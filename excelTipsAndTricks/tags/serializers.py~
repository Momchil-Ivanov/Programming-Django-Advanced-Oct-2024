from rest_framework import serializers
from .models import Tag, Tip, Category

class TagSerializer(serializers.ModelSerializer):
    class Meta:
        model = Tag
        fields = ['id', 'name']

class TipSerializer(serializers.ModelSerializer):
    tags = TagSerializer(many=True)  # Include tags in the tip serialization

    class Meta:
        model = Tip
        fields = ['id', 'title', 'tags']

class CategorySerializer(serializers.ModelSerializer):
    tags = TagSerializer(many=True)  # Include tags in the category serialization

    class Meta:
        model = Category
        fields = ['id', 'name', 'tags']
