from django.urls import path
from django.contrib.auth.views import LogoutView, PasswordChangeView
from django.views.generic import TemplateView

from . import views

urlpatterns = [
    path('register/', views.RegisterView.as_view(), name='register'),
    path('login/', views.CustomLoginView.as_view(), name='login'),
    path('logout/', LogoutView.as_view(next_page='home'), name='logout'),
    path('password-change/', views.PasswordChangeView.as_view(template_name='accounts/password-change.html'), name='password_change'),
    path('profile/', views.ProfileUpdateView.as_view(), name='profile'),  # Profile page URL
    path('password-change/done/', TemplateView.as_view(template_name='accounts/password-change-done.html'), name='password_change_done'),
]