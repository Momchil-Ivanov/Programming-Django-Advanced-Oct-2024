            <input 
                type="text" 
                name="query" 
                placeholder="Search tags..." 
                class="form-control" 
                style="flex: 1; margin-right: 10px;" 
                value="{{ query }}"
            >
            <button type="submit" class="btn btn-outline-success">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <!-- Tag Table -->
    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead>
                <tr>
                    <th>Tag Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for tag in tags %}
                <tr>
                    <td>{{ tag.name }}</td>
                    <td>
                        <!-- Delete button triggers the modal -->
                        <button type="button" class="btn btn-danger" onclick="openDeleteModal({{ tag.id }})">Delete</button>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="2">No tags found matching your search.</td>
                </tr>
                {% endfor %}
            </tbody>
