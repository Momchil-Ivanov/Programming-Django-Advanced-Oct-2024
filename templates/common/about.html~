{% extends 'base.html' %}

{% block title %}About - Excel Tips and Tricks{% endblock %}

{% block content %}
<main class="container mt-5 text-center">
    <h2 id="about-title">{{ title }}</h2>  <!-- Title from context -->
    <p id="about-description">{{ description }}</p>  <!-- Description from context -->
</main>
{% endblock %}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Fetch data from API (optional if you want to update data dynamically)
        fetch('/api/about/')
            .then(response => response.json())
            .then(data => {
                // Insert the title and description into the HTML if data is available
                document.getElementById('about-title').textContent = data.title || '{{ title }}';
                document.getElementById('about-description').textContent = data.description || '{{ description }}';
            })
            .catch(error => console.error('Error fetching About page data:', error));
    });
</script>
